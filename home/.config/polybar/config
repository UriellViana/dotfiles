[module/ip]
type = internal/network
interface = wlo1
format-connected = %{T5}%{T-} <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = Not Connected
label-connected = %local_ip%
format-connected-background = #bd93f9
format-connected-foreground = #212121
format-connected-suffix = "%{T3}%{T-}"
format-connected-suffix-foreground = #bd93f9
format-connected-suffix-background = #ff5555
format-connected-prefix = "%{T3}%{T-}"
format-connected-prefix-foreground = #bd93f9
format-connected-prefix-background = #bd93f9

[module/i3]
type = internal/i3
format = "%{T2}<label-state> <label-mode>%{T-} %{T3}%{T-}"
index-sort = true
enable-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-default = 

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = "%{T1}%name%:%{T-} %{T7}%icon%%{T-}"
label-focused-background = #8be9fd
label-focused-foreground = #212121
label-focused-underline = ${colors.primary}
label-focused-padding = ${self.label-mode-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = "%{T1}%name%:%{T-} %{T7}%icon%%{T-}"
label-unfocused-padding = ${self.label-mode-padding}

; visible = Active workspace on unfocused monitor
label-visible = "%{T1}%name%:%{T-} %{T7}%icon%%{T-}"
label-visible-background = #212121
label-visible-underline = ${colors.primary}
label-visible-padding = ${self.label-mode-padding}

; urgent = Workspace with urgency hint set
label-urgent = "%{T1}%name%:%{T-} %{T7}%icon%%{T-}"
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.label-mode-padding}

; Separator in between workspaces
; label-separator = |

[module/date]
type = internal/date
interval = 1.0
date =  %A %b %e
time = %l:%M %p
format = %{T5}%{T-}  <label>
label = %{T2}%time%, %date%%{T-}
format-foreground = #f8f8f2
;format-background = ${colors.background-alt}
;format-prefix = "%{T3}%{T-}"
;format-prefix-foreground = ${colors.background-alt}
;format-prefix-background = ${colors.background}
;format-suffix = 
;format-suffix-foreground = ${colors.background-alt}
;format-suffix-background = ${colors.background}

[module/weather]
type = custom/script
exec = python ~/.config/polybar/scripts/weather.py
interval = 90
format-background = #ffb86c
format-foreground = #212121
format-prefix = "%{T3}%{T-}"
format-prefix-foreground = #ffb86c
format-prefix-background = ${colors.background}

[module/shutdown-text]
type = custom/menu
expand-right = true

menu-0-0 = "%{T2}Shutdown%{T-}"
menu-0-0-exec = systemctl poweroff
menu-0-1 = "%{T2}Hibernate%{T-}"
menu-0-1-exec = systemctl hibernate
menu-0-2 = "%{T2}Reboot%{T-}"
menu-0-2-exec = systemctl reboot
menu-0-3 = "%{T2}Log out%{T-} "
menu-0-3-exec = i3-msg exit

label-open = " %{T5}%{T-} "
format-background = #f44336
format-foreground = #f5f5f5
format-prefix = "%{T3}%{T-}"
format-prefix-background = #ffb86c
format-prefix-foreground = #f44336
label-close = " %{T5}%{T-} "

label-separator = " %{T5}%{T-} "

[module/shutdown-icons]
type = custom/menu
expand-right = true

menu-0-0 = %{T5}⏻%{T-}
menu-0-0-exec = systemctl poweroff
menu-0-1 = %{T5}⏾%{T-}
menu-0-1-exec = systemctl hibernate
menu-0-2 = %{T5}ﰇ%{T-}
