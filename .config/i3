#
# Variables
#

# [Colors]
set $colorDarkLiver #50514F
set $colorDarkLiverLighter #6F706F
set $colorDarkLiverDarker #424341
set $colorSunsetOrange #F25F5C
set $colorMustard #FFE066
set $colorLapisLazulli #247BA0
set $colorGreenSheen #70C1B3
set $colorWhite #FFFFFF
set $base00 #101218
set $base01 #1f222d
set $base02 #252936
set $base03 #7780a1
set $base04 #C0C5CE
set $base05 #d1d4e0
set $base06 #C9CCDB
set $base07 #ffffff
set $base08 #ee829f
set $base09 #f99170
set $base0A #ffefcc
set $base0B #a5ffe1
set $base0C #97e0ff
set $base0D #97bbf7
set $base0E #c0b7f9
set $base0F #fcc09e

# [Workspaces]
set $ws1 "1: "
set $ws2 "2: "
set $ws3 "3: "
set $ws4 "4: "
set $ws5 "5: "
set $ws6 "6: "
set $ws7 "7: "
set $ws8 "8: "
set $ws9 "9: "
set $ws10 "10: "

# [Mod Key]
set $mod Mod4

#
# [Appearance]
#

# [Font]
font pango: Fira Code 8

# [Gaps]
for_window [class="^.*"] border pixel 0
gaps inner 5
gaps outer 5
smart_gaps on

# [i3bar]
bar {
	font pango: System San Francisco Display, FontAwesome 11
	status_command i3blocks
	tray_output primary
	position top
	height 24

	colors {
		separator $base03
		background $base01
		statusline $base05
                #                       border          background      text
		focused_workspace $base0C $base0D $base00
		active_workspace $base02 $base02 $base07
		inactive_workspace $base01 $base01 $base03
		urgent_workspace $base08 $base08 $base07
	}
}

#
# [Key Bindings]
#

# [Terminal Launching]
bindsym $mod+Return exec i3-sensible-terminal
# [Window Killing and Software Launch]
bindsym $mod+Shift+q kill
bindsym $mod+d exec rofi -show run

# [Window Focus and Manipulation]
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# [Window Splitting]
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+e layout toggle split

# [Window Resizing]
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# [Switch Workspaces]
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# [Move Windows to Workspaces]
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# [Restart i3]
bindsym $mod+Shift+r restart
# [Exit i3]
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
# [Lock i3]
bindsym $mod+shift+x exec i3lock

#
# [Misc]
#

floating_modifier $mod

# startup the keyring daemon to not log me out!!
exec --no-startup-id /usr/bin/gnome-keyring-daemon --start --components=secrets

# always set the wallpaper
exec_always feh --bg-scale $HOME/Pictures/wallpaper.jpg

# [Assigning Software to Workspaces]
assign [class="Google-chrome"] $ws1
assign [class="Code"] $ws2
assign [class="Gnome-terminal"] $ws3
assign [class="Slack"] $ws4

# [Autostart]
exec google-chrome
# exec code
# exec gnome-terminal
exec gnome-terminal
exec gnome-terminal
# exec slack
exec --no-startup-id compton
